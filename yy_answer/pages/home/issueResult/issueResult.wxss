.t_content{
  width: 80%;
  margin-left: 10%;
  height: 264rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-top: 200rpx;
}
.t_content .node{
  border-bottom: 2rpx solid rgba(0,0,0,0.1);
  height: 88rpx;
  width: 100%;
}

.t_content .node:last-child{
  border-width: 0;
}
.t_content .node .title{
  line-height: 88rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  float: left;
}
.t_content .node input{
  float: left;
  font-size: 30rpx;
  line-height: 88rpx;
  height: 88rpx;
  margin-left: 30rpx;
}
.t_content .node .s_title{
   line-height: 88rpx;
   height: 88rpx;
   text-align: right;
   float: right;
   margin-right: 30rpx;
   font-size: 30rpx;
   color: rgba(0,0,0,0.8);
}
.service_charge{
  width: 100%;
  height: 88rpx;
  text-align: center;
}
.service_charge label{
  line-height: 88rpx;
  font-size: 26rpx;
  color: #fec497;
  white-space:nowrap;
}

.money_out{
  height: 88rpx;
  width: 80%;
  margin:0 auto;
  line-height: 88rpx;
  border-width: 0;
  background: #fec497;
  border-radius: 44rpx;
  color: #913e1c;
  text-align: center;
  font-size: 36rpx;
}

.service_msg{
  width: 100%;
  height: 150rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
}
.service_msg label{
  line-height: 150rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.5);
  white-space:nowrap;

}