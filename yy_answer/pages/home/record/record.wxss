.head{
  width: 100%;
  height: 300rpx;
  text-align: center;
}

.head image{
  width: 120rpx;
  height: 120rpx;
  background: #efefef;
  border-radius: 60rpx;
  margin-top: 50rpx;
}
.head .head_nike{
  display: block;
  margin-top: 10rpx;
  color: #fff;
  font-size: 32rpx;
}
.head .head_nike label:nth-child(1){
  color: #fbd4a1;
  margin-right: 5rpx;
}
.head .head_nike label:nth-child(2){
  color: #fbd4a1;
  font-size: 55rpx;
  font-weight: bold;
  margin:0 15rpx;
}
.node{
  width: 90%;
  height: 100rpx;
  margin:0 auto;
  background: #fff;
  padding: 15rpx 15rpx;
  margin-top: 10rpx;
}
.node .node_img{
  width: 100rpx;
  height: 100rpx;
  background: #efefef;
  border-radius: 50rpx;
  display:block;
  float: left;
}
.node .node_img image{
  width: 100%;
}
.node .node_desc{
  width: 250rpx;
  height: 100rpx;
  float: left;
  overflow: hidden;
  margin-left: 30rpx;
}
.node .node_nike{
  display: block;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 15rpx;
}

.node .node_desc .node_time{
  display: block;
  width: 300rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 26rpx;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; 
  color:rgba(0,0,0,0.5);
}
.node .node_money{
  color: #d04332;
  font-size: 28rpx;
  float: right;
  text-align: right;
  width: 210rpx;
  height: 100rpx;
}
.node .desc{
  display: block;
  height: 50rpx;
  line-height: 50rpx;
  text-align: right;
  font-size: 45rpx;
}
.node .state{
  margin-top: 5rpx;
  display: block;
  font-size: 29rpx;
  color:rgba(0,0,0,0.5);
}