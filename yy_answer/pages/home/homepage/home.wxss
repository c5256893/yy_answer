.head{
  width: 80%;
  height: 480rpx;
  text-align: center;
  color: #fbd4a1;
  margin:66rpx auto 20rpx auto;
}
.head .img{
  width: 160rpx;
  height: 160rpx;
  background: #efefef;
  border-radius: 80rpx;
}
.head .dtjl{
  z-index: 2;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  height: 66rpx;
  width: 190rpx;
  line-height: 66rpx;
  color: #913e1c;
  background: #fec497;
  font-size: 32rpx;
}
.head .user_nike{
 display: block;
 font-size: 42rpx;
}
.head .user_msg{
  display: block;
  font-size:34rpx;
  margin-top: 10rpx;
}
.head .user_send{
  height: 88rpx;
  width: 90%;
  margin:0 auto;
  margin-top:80rpx;
  line-height: 88rpx;
  border-width: 0;
  background: #e8c37e;
  border-radius: 44rpx;
  color:#d04332;
  text-align: center;
}
.subject_record{
  background: #fff;
  width: 90%;
  height:45%;
  margin:44rpx auto 0rpx auto;
  border-radius: 10rpx;
}
.section_title{
  font-size: 30rpx;
  line-height: 88rpx;
  height: 88rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 1px solid #ededed;
  opacity: 0.8;
  color: #686868;
}
.section_title_desc{
  float: right;
  color: #d04332;
  font-size: 28rpx;
  line-height: 88rpx;
}
.scroll_view{
  height: 81%;
  width: 100%;
}
.s_node{
  /* width: 100%; */
  height: 100rpx;
  border-bottom: 1px solid #ededed;
  padding:20rpx 30rpx;
}
/* .s_node:active{
  background: #eeeeee;
} */
.s_node .node_img{
  width: 100rpx;
  height: 100rpx;
  background: #efefef;
  border-radius: 50rpx;
  display:block;
  float: left;
}
.s_node .node_img image{
  width: 100%;
}
.s_node .node_desc{
  width: 250rpx;
  height: 100rpx;
  float: left;
  overflow: hidden;
  margin-left: 30rpx;
  /* background: red; */
}
.s_node .node_nike{
  display: block;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 15rpx;
}

.s_node .node_desc .node_time{
  display: block;
  width: 300rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 26rpx;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; 
  color:rgba(0,0,0,0.5);
}
.s_node .node_money,.s_node .node_money_no{
  color: #d04332;
  font-size: 28rpx;
  float: right;
  text-align: right;
  width: 210rpx;
  height: 100rpx;
}
.node_money .desc,.node_money .node_money_no{
  display: block;
  height: 30rpx;
  line-height: 30rpx;
  margin-top: 15rpx;
  text-align: right;
}
.node_money .node_money_no{
  margin-top: 10rpx;
}
.node_money .state{
  display: block;
  color: rgba(0, 0, 0, 0.7);
  height: 30rpx;
  line-height: 30rpx;
  margin-top: 20rpx;
}
.node_money_no .invite{
  font-size: 28rpx;
  line-height: 55rpx;
  height: 55rpx;
  margin-top: 10rpx;
  background: #d04332;
  color: #FFF;
  padding-left:10rpx;
  padding-right:10rpx;
  width: 160rpx;
  float: right;
}
.button-hover {
  opacity: 0.9;
}
